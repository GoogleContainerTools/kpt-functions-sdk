{
  "name": "@googlecontainertools/kpt-functions",
  "version": "0.8.0",
  "description": "KPT functions framework library",
  "author": "KPT Authors",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git@github.com:GoogleContainerTools/kpt-functions-sdk.git",
    "directory": "ts/kpt-functions"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "!**/*_test.*"
  ],
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "rm -Rf dist/ node_modules/",
    "lint": "tslint -p package.json; prettier \"src/**\" \"*.json\" --check",
    "lint-license": "jsgl --local .",
    "format": "prettier \"src/**\" \"*.json\" --write",
    "pretest": "npm run build",
    "test": "jasmine --config=jasmine.json",
    "posttest": "npm run lint"
  },
  "dependencies": {
    "argparse": "^1.0.10",
    "js-yaml": "^3.13.1",
    "rw": "^1.3.3"
  },
  "devDependencies": {
    "@types/argparse": "^1.0.36",
    "@types/jasmine": "^3.4.0",
    "@types/js-yaml": "^3.12.1",
    "@types/lodash": "^4.14.137",
    "@types/node": "^12.7.5",
    "@types/rw": "file:@types/rw",
    "jasmine": "^3.4.0",
    "lodash": "^4.17.15",
    "js-green-licenses": "^1.1.0",
    "prettier": "1.18.2",
    "tslint": "^5.19.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-consistent-codestyle": "^1.16.0",
    "typescript": "^3.4.1"
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
